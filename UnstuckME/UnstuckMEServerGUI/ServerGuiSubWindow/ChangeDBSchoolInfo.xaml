<Window x:Class="UnstuckMEServerGUI.ChangeDBSchoolInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnstuckMEServerGUI"
        mc:Ignorable="d"
        Title="Change School Information" Height="300" Width="450" WindowStartupLocation="CenterScreen" WindowStyle="None"
        MinHeight="300" MinWidth="500" MaxHeight="300" MaxWidth="500" >
    <Grid Background="DimGray">
        <TextBox x:Name="textBoxSchoolName" HorizontalAlignment="Left" Height="30" Margin="165,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" TabIndex="0" VerticalContentAlignment="Center" Padding="4,0,0,0"/>
        <TextBox x:Name="textBoxDatabaseIP" HorizontalAlignment="Left" Height="30" Margin="165,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" TabIndex="1" VerticalContentAlignment="Center" Padding="4,0,0,0"/>
        <Button x:Name="buttonConfigure" Content="Configure" HorizontalAlignment="Left" Margin="420,51,0,0" VerticalAlignment="Top" Width="53" Height="19" FontSize="10" Click="buttonConfigure_Click" TabIndex="2" VerticalContentAlignment="Center" Padding="4,0,0,0"/>
        <TextBox x:Name="textBoxPathToSchoolPhoto" HorizontalAlignment="Left" Height="30" Margin="165,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" TextChanged="textBoxPathToSchoolPhoto_TextChanged" TabIndex="3" VerticalContentAlignment="Center" Padding="4,0,0,0"/>
        <Button x:Name="buttonBrowse" Content="Browse" HorizontalAlignment="Left" Margin="420,87,0,0" VerticalAlignment="Top" Width="53" Click="buttonBrowse_Click" IsDefault="True" TabIndex="4" Height="19" FontSize="10"/>
        <Label x:Name="labelSchoolName" Content="School Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" Height="30" Foreground="White"/>
        <Label x:Name="labelDatabseIP" Content="Database" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="150" Height="30" Foreground="White"/>
        <Label x:Name="labelSchoolLogoPath" Content="School Logo Destination" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="150" Height="30" Foreground="White"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="165,251,0,0" VerticalAlignment="Top" Width="122" TabIndex="5" Click="buttonCancel_Click" IsCancel="True" Foreground="White" Height="21" RenderTransformOrigin="-0.121,0.298" Background="#FF993333"/>
        <Button x:Name="buttonSave" Content="Save" HorizontalAlignment="Left" Margin="351,251,0,0" VerticalAlignment="Top" Width="122" TabIndex="6" Click="buttonSave_Click" IsDefault="True" Foreground="White" Height="21" Background="#336699"/>
        <Button x:Name="buttonClickToChangePhoto" Content="Click To Change" VerticalContentAlignment="Top"  HorizontalAlignment="Left" Height="138" Margin="10,144,0,0" VerticalAlignment="Top" Width="128" Background="#336699" RenderTransformOrigin="0.507,0.219" Click="buttonBrowse_Click" FontWeight="Bold" Foreground="Black"/>
        <Image x:Name="imageSchoolLogo" HorizontalAlignment="Left" Height="96" Margin="30,176,0,0" VerticalAlignment="Top" Width="85" Source="/Resources/SimpleAvatarWhite.png" Stretch="UniformToFill" OpacityMask="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" />
        <TextBox x:Name="textBoxUnstuckMEServerIP" HorizontalAlignment="Left" Height="30" Margin="165,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" TabIndex="0" VerticalContentAlignment="Center" Padding="4,0,0,0"/>
        <Label x:Name="labelUnstuckMEServerIp" Content="UnstuckME Server IP" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Width="150" Height="30" Foreground="White"/>
        <Button x:Name="buttonConfigureUnstuckMEServer" Content="Configure" HorizontalAlignment="Left" Margin="420,120,0,0" VerticalAlignment="Top" Width="53" Height="20" FontSize="10" TabIndex="2" Click="buttonConfigureUnstuckMEServer_Click"/>

    </Grid>
</Window>
