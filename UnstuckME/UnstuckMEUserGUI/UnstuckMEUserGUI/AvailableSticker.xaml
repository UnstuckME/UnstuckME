<UserControl x:Class="UnstuckMEUserGUI.AvailableSticker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnstuckMEUserGUI"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300" BorderBrush="Black" BorderThickness="1,1,1,1">
    <Grid>
        <Button x:Name="ClassNameInfoButton" Padding="6,0,0,0" HorizontalAlignment="Right" Mouse.MouseEnter="Button_MouseEnter" Mouse.MouseLeave="Button_MouseLeave" Cursor="Hand" Margin="0,0,80,0" VerticalContentAlignment="Center" Foreground="White" Background="{x:Null}" Width="218" Height="Auto" HorizontalContentAlignment="Left">
        </Button>
        <Button x:Name="Decline" Width="40" Margin="240,0,0,0" Background="{x:Null}" Cursor="Hand" HorizontalAlignment="Right">
            <Image Source="Resources/redXMark.png" Height="25" Width="25"></Image>
        </Button>
        <Button x:Name="Accept" Width="40" Margin="0,0,40,0" Background="{x:Null}" Cursor="Hand" HorizontalAlignment="Right">
            <Image Source="Resources/greenCheckMark.png" Height="25" Width="25"></Image>
        </Button>
    </Grid>
</UserControl>
