<Window x:Class="UnstuckMEUserGUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnstuckMEUserGUI"
        mc:Ignorable="d"
        Title="UnstuckME" Height="500" Width="350" MaxHeight="500" MaxWidth="350" MinHeight="500" MinWidth="350" Background="DimGray" ContentRendered="Window_ContentRendered" WindowStartupLocation="CenterScreen">
    <Grid x:Name="_MainGrid">
        <Grid x:Name="_LoginGrid" Visibility="Visible" IsEnabled="True">
            <TextBox x:Name="textBoxUserName" HorizontalAlignment="Left" Background="White" Height="22" Margin="93,184,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="164"/>
            <PasswordBox x:Name="passwordBox" Background="White" HorizontalAlignment="Left" Margin="93,243,0,0" VerticalAlignment="Top" Width="164"/>
            <Button x:Name="buttonLogin" Click="buttonLogin_Click" Background="White" Content="Login" HorizontalAlignment="Left" Margin="141,352,0,0" VerticalAlignment="Top" Width="74"/>
            <ComboBox x:Name="comboBoxSchools" Background="White"  HorizontalAlignment="Left" Margin="93,294,0,0" VerticalAlignment="Top" Width="164" SelectedIndex="0">
                <ComboBoxItem Name="Default" Content="(Select School)" Visibility="Hidden" Height="0" Width="0"/>
            </ComboBox>
            <Label x:Name="labelUsername" Foreground="White" Content="Username:" HorizontalAlignment="Left" Margin="93,152,0,0" VerticalAlignment="Top" Width="165" Height="27" FontSize="12"/>
            <Label x:Name="labelPassword" Foreground="White" Content="Password:" HorizontalAlignment="Left" Margin="95,211,0,0" VerticalAlignment="Top" Width="165" Height="32" FontSize="12"/>
            <Button x:Name="buttonCreateAccount" Click="buttonCreateAccount_Click" Foreground="White" Background="#336699" Content="Create New Account" HorizontalAlignment="Left" Margin="106,393,0,0" VerticalAlignment="Top" Width="140" BorderBrush="#FF585656"  Height="23" FontSize="14" MouseEnter="buttonCreateAccount_MouseEnter" MouseLeave="buttonCreateAccount_MouseLeave"/>
        </Grid>
        <Grid x:Name="_AccountCreationGrid" Visibility="Hidden" IsEnabled="False">
            <Button TabIndex="6" x:Name="buttonCancel" Click="buttonCancel_Click" MouseEnter="buttonCancel_MouseEnter" MouseLeave="buttonCancel_MouseLeave" Background="#FF993333" Foreground="White" Content="Cancel" HorizontalAlignment="Left" Margin="128,418,0,0" VerticalAlignment="Top" Width="75" IsCancel="True"/>
            <Button TabIndex="5" x:Name="buttonCreate" Click="buttonCreate_Click" MouseEnter="buttonCreate_MouseEnter" MouseLeave="buttonCreate_MouseLeave" Background="#336699" Foreground="White" Content="Create Account" HorizontalAlignment="Left" Margin="64,374,0,0" VerticalAlignment="Top" Width="209" IsDefault="True"/>
            <TextBox TabIndex="0" x:Name="textBoxFirstName" HorizontalAlignment="Left" Height="23" Margin="64,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209"/>
            <TextBox TabIndex="1" x:Name="textBoxLastName" HorizontalAlignment="Left" Height="23" Margin="64,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209"/>
            <TextBox TabIndex="2" x:Name="textBoxEmailAddress" HorizontalAlignment="Left" Height="23" Margin="64,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209"/>
            <PasswordBox TabIndex="3" x:Name="passwordBoxCreate" HorizontalAlignment="Left" Margin="64,260,0,0" VerticalAlignment="Top" Width="209"/>
            <PasswordBox TabIndex="4" x:Name="passwordBoxCreateConfirm" HorizontalAlignment="Left" Margin="64,314,0,0" VerticalAlignment="Top" Width="209"/>
            <Label x:Name="labelFirstName" Content="First Name" HorizontalAlignment="Left" Margin="64,73,0,0" VerticalAlignment="Top" Width="209" FontSize="12" Height="25" Foreground="White"/>
            <Label x:Name="labelLastName" Content="Last Name" HorizontalAlignment="Left" Margin="64,126,0,0" VerticalAlignment="Top" Width="209" Foreground="White" FontSize="12"/>
            <Label x:Name="labelEmailAddress" Content="Email Address" HorizontalAlignment="Left" Margin="64,180,0,0" VerticalAlignment="Top" Width="209" Foreground="White" FontSize="12"/>
            <Label x:Name="labelCreatePassword" Content="Password" HorizontalAlignment="Left" Margin="64,234,0,0" VerticalAlignment="Top" Width="209" Foreground="White" FontSize="12"/>
            <Label x:Name="labelCreatePasswordConfirm" Content="Confirm Password" HorizontalAlignment="Left" Margin="64,288,0,0" VerticalAlignment="Top" Width="209" Foreground="White" FontSize="12"/>
            <Label x:Name="labelTitle" Content="Account Creation" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="64,24,0,0" VerticalAlignment="Top" Width="209" Height="49" FontSize="22" Foreground="White"/>
            <Label x:Name="labelIncorrectCreds" Visibility="Hidden" Content="Invalid Username/Password" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="64,342,0,0" VerticalAlignment="Top" Width="209" Height="27" Foreground="#FFFF0909" FontFamily="Times New Roman" FontSize="12"/>
        </Grid>
    </Grid>
</Window>
