<Page x:Class="UnstuckMEUserGUI.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UnstuckMEUserGUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AdminPage">

    <Grid>
        <Label Foreground="White" FontWeight="Heavy" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="32" Content="Admin Page" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,0,0,249"></Label>
        <Button x:Name="AddRemoveClassesBtn" Content="Add/Remove Classes" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Width="132" Click="AddRemoveClassesBtn_Click"/>
        <Button x:Name="AddRemoveUserRoleBtn" Content="Add/Remove User Role" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Width="132" Click="AddRemoveUserRoleBtn_Click"/>
        <Button x:Name="button" Content="Add/Remove Mentor Orgs" HorizontalAlignment="Left" Margin="10,143,0,0" VerticalAlignment="Top" Width="156"/>
        <Button x:Name="button1" Content="Add/Remove Mentors" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" Width="156" Click="button1_Click"/>
        <Button x:Name="button2" Content="Message All Uers" HorizontalAlignment="Left" Margin="10,208,0,0" VerticalAlignment="Top" Width="132"/>
        <Button x:Name="button3" Content="Start Admin Chat" HorizontalAlignment="Left" Margin="10,244,0,0" VerticalAlignment="Top" Width="132"/>
    </Grid>
</Page>
