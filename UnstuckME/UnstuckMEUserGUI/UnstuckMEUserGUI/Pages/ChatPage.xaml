<Page x:Class="UnstuckMEUserGUI.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UnstuckMEUserGUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="ChatPage" xmlns:my="clr-namespace:UnstuckMEUserGUI">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="203*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="67*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Column="0" Grid.Row="0" Background="#336699">
                <Border BorderBrush="Black" BorderThickness="0,0,0,1"></Border>
                <Label Content="Conversations:" Foreground="White" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></Label>
                <Button x:Name="ButtonCreateChat" Click="ButtonCreateChat_Click" HorizontalAlignment="Right" BorderThickness="0,0,0,0" Width="30" Height="30" Background="{x:Null}" Cursor="Hand" VerticalAlignment="Center">
                    <Image Source="/Resources/Plus/PlusWhite.png" Height="15" Width="15" Stretch="UniformToFill"/>
                </Button>
            </Grid>
            <Grid x:Name="GridConversations" Visibility="Visible" IsEnabled="True" Grid.Column="0" Grid.Row="1">
                <ScrollViewer VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="StackPanelConversations" HorizontalAlignment="Stretch" VerticalAlignment="Top"></StackPanel>
                </ScrollViewer>
            </Grid>
            <Grid x:Name="GridNewConversation" Grid.Column="0" Grid.Row="1" Background="SteelBlue" Visibility="Hidden" IsEnabled="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="241*"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <Grid Grid.Column="0" Grid.Row="0">
                    <Label Height="25" Width="150" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" VerticalContentAlignment="Stretch" Content="Manual Search" FontSize="12" Margin="25,0" ></Label>
                    <TextBox x:Name="TextBoxManualUserNameSearch" Height="28" Width="150" Padding="5,0,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="25,25,25,0" ></TextBox>
                    <Button x:Name="ButtonStartConversation" Click="ButtonStartConversation_Click" Height="25" Cursor="Hand" Width="50" Content="Start" FontSize="12" BorderBrush="#336699" Foreground="White" Background="ForestGreen" FontWeight="DemiBold" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="125,58,25,0"></Button>
                    <Label x:Name="LabelInvalidUserNameSearch" Height="25" Visibility="Hidden" Content="Invalid Username" Foreground="Red" VerticalContentAlignment="Center" Padding="16,0,0,0" FontWeight="Medium" FontSize="12" VerticalAlignment="Top" Margin="10,57,75,0" />
                    <Label Height="25" Content="Contacts:" Foreground="White" VerticalContentAlignment="Center" FontWeight="Medium" FontSize="12" VerticalAlignment="Top" Margin="10,90,75,0" />
                    <ScrollViewer VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" Height="Auto" Margin="0,115,0,0">
                        <StackPanel x:Name="StackPanelAddContacts" VerticalAlignment="Top" HorizontalAlignment="Stretch"></StackPanel>
                    </ScrollViewer>
                </Grid>
                <Grid Grid.Column="0" Grid.Row="1">
                    <Border BorderBrush="#336699" BorderThickness="0,2,0,0"></Border>
                    <Button x:Name="ButtonAddUserDone" Cursor="Hand" BorderBrush="White" Click="ButtonAddUserDone_Click" Foreground="White" Background="#993333" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Content="Back" FontWeight="DemiBold" Width="75" Margin="0,0,5,0"></Button>
                </Grid>
            </Grid>
            <Border BorderBrush="Black" BorderThickness="0,0,1,0" Grid.Row="0" Grid.RowSpan="2"></Border>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="133*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#336699">
                <Border BorderBrush="Black" BorderThickness="0,0,0,1">

                </Border>
                <Label x:Name="LabelConversationName" Foreground="White" Content="Conversation Name" FontSize="16" VerticalContentAlignment="Center" VerticalAlignment="Stretch"></Label>
                <Border x:Name="ButtonAddUserToConvo" MouseEnter="ButtonAddUserToConvo_MouseEnter" MouseLeave="ButtonAddUserToConvo_MouseLeave" MouseLeftButtonDown="ButtonAddUserToConvo_MouseLeftButtonDown" Margin="0,0,5,0" BorderThickness="2,2,2,2" CornerRadius="90" Cursor="Hand" Height="40" Width="40" BorderBrush="DimGray" VerticalAlignment="Center" HorizontalAlignment="Right" Background="SteelBlue">
                    <Image x:Name="ImageAddUserToConvo" Height="30" Width="30" Cursor="Hand" Source="/Resources/Group/GroupWhite.png"></Image>
                </Border>
            </Grid>
            <Grid Grid.Row="1">
                <ScrollViewer x:Name="ScrollViewerMessagesBox" VerticalScrollBarVisibility="Auto" SizeChanged="ScrollViewerConversationBox_SizeChanged">
                    <StackPanel x:Name="StackPanelMessages" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    </StackPanel>
                </ScrollViewer>

                <Border BorderBrush="DimGray" BorderThickness="0,0,0,1"></Border>

            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="19*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Button Width="40" HorizontalAlignment="Left" Background="{x:Null}" BorderThickness="0,0,0,0" Cursor="Hand">
                        <Image Source="/Resources/Download/DownloadWhite.png" Height="25" Width="25" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="540"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>

                        </Image>
                    </Button>
                    <TextBox x:Name="MessageTextBox" Padding="5,0,0,0" MaxLength="450" KeyDown="MessageTextBox_KeyDown" Margin="40,0,0,0" SizeChanged="MessageTextBox_SizeChanged" BorderBrush="{x:Null}" BorderThickness="4,4,4,4"  VerticalContentAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></TextBox>
                </Grid>
                <Grid Grid.Column="1">
                    <Button x:Name="SendButton" Click="SendButton_Click" Content="Send" Background="#336699" Foreground="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="{x:Null}" BorderThickness="3,3,3,3"></Button>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Page>
