<Window x:Class="UnstuckMEUserGUI.ReconnectingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnstuckMEUserGUI"
        mc:Ignorable="d"
        Title="ReconnectingWindow" Height="300" Width="300" ContentRendered="REWindow_ContentRendered" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" WindowStyle="None" Background="{x:Null}" BorderBrush="{x:Null}">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Background="#336699">
        <Grid>
            <Image Width="200" Height="200" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0" Source="Resources/UnstuckMEGraphic.png"/>
            <Label Name="ReconnectingLabel" Content="Reconnecting" Foreground="White" FontSize="20" Margin="0,20,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"></Label>
            <Button x:Name="button" Content="Button" HorizontalAlignment="Center" Margin="0,100,0,0" Click="button_Click" VerticalAlignment="Center" Width="75"/>
        </Grid>
    </Border>
</Window>
