<Window x:Class="UnstuckMEUserGUI.SubWindows.AddStudentReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnstuckMEUserGUI.SubWindows"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Title="AddStudentReviewWindow" Height="900" Width="900" WindowStyle="None" WindowState="Maximized" Background="{x:Null}">
    <Grid>
        <Rectangle Fill="Black" Opacity=".7">
        </Rectangle>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MaxHeight="400" MaxWidth="600" MinHeight="400" MinWidth="700" Height="400" Width="700" Margin="100,150,100,342">
            <Border BorderBrush="#336699" BorderThickness="4,4,4,4" CornerRadius="5">
                <Border BorderBrush="Black" BorderThickness="4,4,4,4" Background="DimGray" CornerRadius="5">
                </Border>
            </Border>
            <Label x:Name="labelTitle" Content="Review Your Student" Foreground="White" FontSize="35" Margin="0,0,-16,0" VerticalAlignment="Top" Height="75" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Global User Interface"/>
            <TextBox x:Name="ReviewDescriptionTxtBox" HorizontalAlignment="Left" Height="187" Margin="62,129,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="591"/>
            <Border Cursor="Hand" BorderBrush="Black" BorderThickness="2,2,2,2" CornerRadius="3" Height="40" Width="160" Background="#336699" Margin="270,0,270,29" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Button x:Name="Submit" Width="155" Content="Submit" FontSize="20" BorderBrush="{x:Null}" Foreground="White" Background="#336699" VerticalAlignment="Top" HorizontalAlignment="Stretch"  Click="Submit_Click" Height="36" Margin="0.4,0.4,0.6,-0.4"></Button>
            </Border>
            <Slider x:Name="sliderRating" Width="200" IsSnapToTickEnabled="True" TickFrequency=".5" ValueChanged="sliderRating_ValueChanged"  VerticalContentAlignment="Top" HorizontalAlignment="Center" Maximum="5" Minimum="0" Margin="252,80,248,295"/>

        </Grid>
    </Grid>
</Window>
