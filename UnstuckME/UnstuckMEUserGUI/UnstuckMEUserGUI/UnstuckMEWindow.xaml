<Window x:Class="UnstuckMEUserGUI.UnstuckMEWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnstuckMEUserGUI"
        mc:Ignorable="d" 
        Title="UnstuckME" Height="Auto" Width="Auto" MinWidth="75"
        Background="DimGray" WindowStyle="SingleBorderWindow" ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen" Visibility="Visible">
    <Window.Resources>
        <Style TargetType="Button" x:Key="NoHighlightButton">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="15" Background="{x:Null}">
                            <ContentPresenter x:Name="ButtonContentPresenter" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="Image">
                                        <Setter Property="Width" Value="Auto" />
                                        <Setter Property="Margin" Value="Auto" />
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="192*"/>

        </Grid.ColumnDefinitions>
        <Grid Width="300" Height="Auto" MinWidth="100" MaxWidth="300" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Gray" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="221*"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="209*"/>
                <RowDefinition Height="33"/>
            </Grid.RowDefinitions>
            <Label x:Name="AvailableStickerLabel" Content="Available Stickers:" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="280" Height="34"/>
            <Grid Margin="0,5,0,0" Grid.Row="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="AvailableStickersStack" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="300" Grid.Row="0"/>
                </ScrollViewer>

            </Grid>
            <Separator Grid.Row="2" Foreground="Black" Background="Black" VerticalContentAlignment="Center" VerticalAlignment="Center"></Separator>
            <Separator Grid.Row="4" Foreground="Black" Background="Black" VerticalContentAlignment="Top" VerticalAlignment="Top"></Separator>
            <Grid Grid.Row="3">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="OnlineUsersStack" Height="Auto" VerticalAlignment="Top" Grid.Row="2"/>
                </ScrollViewer>
            </Grid>
            <Label x:Name="OnlineUsersLabel" Foreground="White" Content="Online Users: " VerticalContentAlignment="Center" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="300" Height="38" Grid.Row="3" Grid.RowSpan="2"/>
        </Grid>
        <Frame x:Name="frame" BorderBrush="Black" BorderThickness="1,1,1,1" MinWidth="300" Background="LightGray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto" Margin="75,0,300,0" Grid.ColumnSpan="3"/>
        <Label x:Name="label" Content="Pages Go Here" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="32" HorizontalAlignment="Left" Margin="32,166,0,0" VerticalAlignment="Top" Height="164" Width="318" Grid.Column="1"/>
        <Grid Width="Auto" Height="Auto" MinWidth="75" MaxWidth="75" HorizontalAlignment="Left" VerticalAlignment="Stretch" Background="Gray" Grid.Column="0">
            <Border CornerRadius="15" VerticalAlignment="Top" HorizontalAlignment="Stretch" BorderThickness="2,2,2,2" Background="#336699" Height="60" Margin="10,10,10,0" Cursor="Hand">
                <Button x:Name="HomeButton" Style="{StaticResource NoHighlightButton}" >
                    <Image Source="Resources/home.png" ></Image>
                </Button>
            </Border>
            <Border CornerRadius="15" VerticalAlignment="Top" HorizontalAlignment="Stretch" BorderThickness="2,2,2,2" Background="#336699" Height="60" Margin="10,75,10,0" Cursor="Hand">
                <Button x:Name="ChatButton" Style="{StaticResource NoHighlightButton}" >
                    <Image Source="Resources/Star.png" ></Image>
                </Button>
            </Border>
            <Border CornerRadius="15" VerticalAlignment="Top" HorizontalAlignment="Stretch" BorderThickness="2,2,2,2" Background="#336699" Height="60" Margin="10,140,10,0" Cursor="Hand">
                <Button x:Name="ProfileButton" Style="{StaticResource NoHighlightButton}" >
                    <Image Source="Resources/UnstuckME_Logo.png" ></Image>
                </Button>
            </Border>
            <Border CornerRadius="15" VerticalAlignment="Top" HorizontalAlignment="Stretch" BorderThickness="2,2,2,2" Background="#336699" Height="60" Margin="10,205,10,0" Cursor="Hand">
                <Button x:Name="FriendsButton" Style="{StaticResource NoHighlightButton}" >
                    <Image Source="Resources/Right_Arrow.png" ></Image>
                </Button>
            </Border>
        </Grid>
    </Grid>
</Window>
    