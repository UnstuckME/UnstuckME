<UserControl x:Class="UnstuckMEUserGUI.ContactAddToConversation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnstuckMEUserGUI"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="175">
    <Grid Grid.Row="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="3"/>
        </Grid.RowDefinitions>
        <Grid>
            <Image x:Name="ImageUserProfilePic" Source="/Resources/User/UserWhite.png" Width="30" VerticalAlignment="Stretch" Stretch="UniformToFill" HorizontalAlignment="Left" Grid.RowSpan="2"></Image>
            <Button x:Name="ButtonAddUser" Cursor="Hand" Click="ButtonAddUser_Click" HorizontalAlignment="Right" Width="30" Background="{x:Null}" BorderThickness="0,0,0,0" Grid.RowSpan="2">
                <Image x:Name="ImageAddUser" Source="/Resources/Speech/SpeechWhite.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="20" ></Image>
            </Button>
            <Label x:Name="LabelUsername" HorizontalAlignment="Stretch" Content="UserName" Foreground="White" FontSize="12" VerticalContentAlignment="Center" VerticalAlignment="Stretch" Margin="30,0" Grid.RowSpan="2"></Label>
        </Grid>
        <Grid Grid.Row="1" Background="#336699">
            
        </Grid>
    </Grid>
</UserControl>
