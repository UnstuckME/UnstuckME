<UserControl x:Class="UnstuckMEUserGUI.NewMessageNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnstuckMEUserGUI"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button x:Name="NewMessageButton" Click="NewMessageButton_Click" FontWeight="Medium" Padding="8,0,0,0" VerticalContentAlignment="Center" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" Cursor="Hand"></Button>
            <Border BorderBrush="Black" BorderThickness="0,0,0,1"></Border>
        </Grid>

        <Grid Grid.Row="1" Background="SteelBlue">
            <Border BorderBrush="Black" BorderThickness="0,0,0,1"></Border>
        </Grid>
    </Grid>
</UserControl>
