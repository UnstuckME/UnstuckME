<UserControl x:Class="UnstuckMEUserGUI.NewMessageNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnstuckMEUserGUI"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Image x:Name="NewMessageIcon" Source="/Resources/User/UserWhite.png" Width="30" Stretch="UniformToFill" HorizontalAlignment="Left"></Image>
            <Button x:Name="NewMessageButton" Click="NewMessageButton_Click" Padding="8,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Height="Auto" Width="270" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" Cursor="Hand" Margin="30,0,0,0" ></Button>
        </Grid>

        <Grid Grid.Row="1" Background="#993333">
            <Border BorderBrush="Black" BorderThickness="0,1,1,0"></Border>
            
        </Grid>
    </Grid>
</UserControl>
