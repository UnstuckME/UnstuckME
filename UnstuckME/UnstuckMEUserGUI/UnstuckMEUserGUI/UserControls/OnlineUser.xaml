<UserControl x:Class="UnstuckMEUserGUI.OnlineUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnstuckMEUserGUI"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300" 
             BorderBrush="Black" BorderThickness="0,0,0,1">
    <Grid x:Name="OnlineUserGrid">
        <Image Source="/Resources/online.png" HorizontalAlignment="Left" Height="15" Width="15" Margin="8,0,0,0"></Image>
        <Button x:Name="UserButton" Height="29" Foreground="White" Cursor="Hand" Click="UserButton_Click" HorizontalAlignment="Stretch" Mouse.MouseEnter="UserButton_MouseEnter" Mouse.MouseLeave="UserButton_MouseLeave" VerticalContentAlignment="Center" Content="Button" Background="{x:Null}" BorderBrush="Black" BorderThickness="1,0,0,0" HorizontalContentAlignment="Left" Padding="5,0,0,0"  VerticalAlignment="Stretch" Margin="28,-1,0,0"/>
    </Grid>
</UserControl>
