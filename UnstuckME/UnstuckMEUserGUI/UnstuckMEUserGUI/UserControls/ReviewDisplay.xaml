<UserControl x:Class="UnstuckMEUserGUI.ReviewDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnstuckMEUserGUI"
             mc:Ignorable="d" 
             Name="Review" d:DesignWidth="300" Height="80">
    <Canvas x:Name="StickerCanvas" Width="{Binding ActualWidth, ElementName=Review}" Background="DimGray">
        <Label x:Name="DescriptionLabel" Background="White" Height="60" Width="{Binding ActualWidth, ElementName=Review}" BorderThickness="1"
               HorizontalContentAlignment="Left" VerticalContentAlignment="Top" FontSize="8" />
        <local:StarRankTemplate_UC x:Name="ReviewStarRank" IsEnabled="False" Height="20" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="1,0,0,0" Canvas.Top="60" />
        <Button x:Name="ReportBtn" Content="Report" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="20" Width="50" Margin="250,60,0,0" Click="ReportBtn_Click"/>
    </Canvas>
</UserControl>
