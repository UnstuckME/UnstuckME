            <ComboBoxItem x:Name="Hour_2" Content="2:00" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <ComboBoxItem x:Name="Hour_3" Content="3:00" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <ComboBoxItem x:Name="Hour_4" Content="4:00" HorizontalAlignment="Center" VerticalAlignment="Center" />
