            <ComboBoxItem x:Name="Hour_12" Content="12:00" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </ComboBox>
        <ComboBox x:Name="MinutesLeft" Height="20" Width="50" Margin="100,120,0,0" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden">
