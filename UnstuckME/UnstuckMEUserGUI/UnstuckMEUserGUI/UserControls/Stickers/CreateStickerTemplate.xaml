<UserControl x:Class="UnstuckMEUserGUI.CreateStickerTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnstuckMEUserGUI"
             mc:Ignorable="d"
             Name="Sticker" d:DesignWidth="300" Height="170">
    <Canvas x:Name="StickerDisplay" Height="{Binding ActualHeight, ElementName=Sticker}" Width="{Binding ActualWidth, ElementName=Sticker}" Background="DimGray">
